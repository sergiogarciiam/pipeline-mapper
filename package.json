{
  "name": "pipeline-mapper",
  "displayName": "Pipeline Mapper",
  "description": "Visualize GitLab CI/CD pipeline YAML files locally, without pushing your changes.",
  "version": "0.0.1",
  "license": "SEE LICENSE IN LICENSE.md",
  "icon": "assests/icon.png",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pipeline-mapper.generatePipelineMapper",
        "title": "Generate Pipeline Mapper"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:esbuild watch:tsc watch:web",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:web": "cd web && pnpm run watch",
    "package": "pnpm run check-types && pnpm run lint:back && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint:back": "eslint src",
    "lint:web": "cd web && pnpm run lint",
    "lint": "eslint src && cd web && pnpm run lint",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint:back && pnpm run lint:web",
    "test:only": "mocha -r ts-node/register ./src/tests/**/*.test.ts",
    "test": "mocha -r ts-node/register ./src/tests/**/*.test.ts",
    "test:vscode": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "mocha": "^11.7.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  }
}